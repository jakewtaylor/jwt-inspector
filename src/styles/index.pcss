@tailwind base;
@tailwind utilities;

html, body, #root {
    @apply .min-h-screen .bg-off-black;
}

.page {
    @apply .min-h-screen .p-4 .pt-1;
}

.item {
    @apply .m-2 .mb-6 .pb-6 .border-b .border-gray-800;
}

.item.--condensed {
    @apply .pb-2 .mt-0;
}

.actions {
    @apply .flex .items-stretch .justify-end;
}

.action {
    @apply .bg-gray-800 .rounded .p-2 .text-base .text-gray-500 .ml-1 .no-underline .flex .items-center .antialiased;
    transition: all .2s;
}

.action:hover {
    @apply .bg-gray-700 .text-gray-400;
}

.action:focus {
    @apply .outline-none;
}

.action i {
    @apply .block;
}

.action .label {
    @apply .block .ml-1 .uppercase .text-sm;
}

.jwt_field__container {
    @apply .w-full .flex .items-stretch .mb-2;
}

.jwt_field__container .jwt_field {
    @apply .p-2 .rounded .bg-gray-800 .text-gray-500 .font-light .antialiased .font-mono .flex-1;
    transition: all .2s;
}

.jwt_field__container .jwt_field:focus {
    @apply .bg-gray-700 .text-gray-400;
}

.jwt_field__container .jwt_field:focus {
    @apply .outline-none;
}

.jwt_field__container .action:focus {
    @apply .outline-none;
}

.jwt {
    @apply .p-2 .pb-0 .-mx-4 .-mb-4 .flex .flex-wrap .justify-between;
}

.jwt__section {
    @apply .mb-4 .mx-2 .p-3 .bg-gray-800 .rounded;
}

.jwt__section.--half {
    /* @apply .w-1/2; */
    @apply .flex-1;
}

.jwt__section.--full {
    @apply .w-full;
}

.jwt__section .label {
    @apply .uppercase .text-xs .mb-2 .text-gray-500 .font-light;
}

.jwt__section .code {
    @apply .block .text-gray-500 .font-light;
    line-height: 1.4rem;
}

.code pre {
    white-space: pre-wrap;
    word-break: break-all;
}

.code pre > pre {
    @apply .pl-6;
}

.code .token.property { @apply .text-red-400; }
.code .token.string { @apply .text-green-400; }
.code .token.boolean { @apply .text-blue-400; }
.code .token.number { @apply .text-orange-400; }
.code .token.timestamp { @apply .text-gray-700 .text-sm; }

.add {
    @apply .p-2 .text-center .cursor-pointer .text-gray-700;
    transition: color .2s;
}

.add:hover {
    @apply .text-gray-600;
}

.add .add__icon {
    font-size: 72px;
}

.invalid_token {
    @apply .bg-gray-800 .px-2 .py-4 .rounded .text-center .text-gray-500 .antialiased;
}

.token_anatomy {
    @apply .pt-4 .pb-1;
}

.token_anatomy .token {
    @apply .font-mono;
}

.token_anatomy .token .part {
    @apply .inline-block .pb-1 .border-b .relative .mb-8;
}

.token_anatomy .token .part:after {
    @apply .absolute .inset-x-0 .text-center;
    top: 100%;
    line-height: theme('height.8');
}

.token_anatomy .token .part.header { @apply .border-red-400; }
.token_anatomy .token .part.payload { @apply .border-blue-400; }
.token_anatomy .token .part.signature { @apply .border-green-400; }

.token_anatomy .token .part.header:after { content: 'header'; @apply .text-red-400; }
.token_anatomy .token .part.payload:after { content: 'payload'; @apply .text-blue-400; }
.token_anatomy .token .part.signature:after { content: 'signature'; @apply .text-green-400; }
